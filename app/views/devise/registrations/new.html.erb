
<div class="row">
  <div class="col-1">
  </div>
  <div class="col-10">

    <h2>註冊新帳戶</h2>
    
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
    
      <div class="form-inputs">
        <%= f.input :email, label: "電子郵件", required: true, autofocus: true %>
        <%= f.input :password, label: "密碼", required: true, hint: ("最少#{@minimum_password_length}個字元" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: "密碼確認", required: true %>
      </div>
    
      <div class="form-actions">
        <%= f.button :submit, "註冊", class: "btn btn-color" %>
      </div>
    <% end %>
    <span><%= render "devise/shared/links" %></span>
    

  <div class="col-1">
  </div>
</div>


