
<div class="row">
  <div class="col-1">
  </div>
  <div class="col-10">
    <h2>登入</h2>
    
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: "電子郵件", required: false, autofocus: true %>
        <%= f.input :password, label: "密碼", required: false %>
        <%= f.input :remember_me, label: "記住我的帳號", as: :boolean if devise_mapping.rememberable? %>
      </div>
    
      <div class="form-actions">
        <%= f.button :submit, "登入", class: "btn btn-sign" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>

  </div>
  <div class="col-1">
  </div>
</div>


